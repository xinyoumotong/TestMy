<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 真实姓名-->
        <RelativeLayout
            android:id="@+id/item_modify_person_name_rl"
            style="@style/about_me_rl"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/list_rl_tv_left2"
                android:text="@string/realname" />

            <TextView
                android:id="@+id/item_modify_personal_tv_realname"
                style="@style/list_rl_tv_right"
                android:textColor="@color/gray_99" />

            <EditText
                android:id="@+id/item_modify_personal_et_realname"
                style="@style/rl_edit_del2"
                android:background="@null"
                android:maxLength="10"
                android:visibility="gone"
                />

        </RelativeLayout>

        <View style="@style/divider_horizontal2" />

        <!-- 身份证号 -->
        <RelativeLayout
            android:id="@+id/item_modify_person_idNumber_rl"
            style="@style/about_me_rl">

            <TextView
                style="@style/list_rl_tv_left2"
                android:text="@string/idNumber" />

            <TextView
                android:id="@+id/item_modify_personal_tv_idNumber_show"
                android:textColor="@color/gray_99"
                style="@style/list_rl_tv_right" />

            <EditText
                android:id="@+id/item_modify_personal_et_idNumber"
                style="@style/rl_edit_del2"
                android:background="@null"
                android:maxLength="18"
                android:visibility="gone"
                />

        </RelativeLayout>

        <View style="@style/divider_horizontal2" />

        <Button
            android:id="@+id/item_modify_personal_bt_confirm"
            style="@style/red_bt_big"
            android:layout_marginTop="50dp"
            android:text="@string/confirm2"
            />

    </LinearLayout>

    <hotP2B.WageGainTools.android.ui.widget.EmptyLayout
        android:id="@+id/item_modify_personal_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>