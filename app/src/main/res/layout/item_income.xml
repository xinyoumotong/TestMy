<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

>
  
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:background="@drawable/shape_border_all"
    >
  
     
       <TextView 
          android:id="@+id/item_income_tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
       />
       
       <View style="@style/divider_horizontal" />
      
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
        >
            <!-- 时间 -->
          <LinearLayout 
             style="@style/ll_horizontal_weight"
             android:layout_height="fill_parent"
             android:layout_weight="2"
             android:gravity="left|center_vertical"
           >
            <TextView 
               style="@style/income_item_title"
               android:text="@string/time"
             />
            <TextView 
              android:id="@+id/item_income_tv_time"
              style="@style/income_item_value"
            />
              
          </LinearLayout>
          
          <!--收益-->
          <LinearLayout 
             style="@style/ll_horizontal_weight"
             android:layout_height="fill_parent"
             android:gravity="left|center_vertical"
           >
            <TextView 
               style="@style/income_item_title"
               android:text="@string/income"
             />
            <TextView 
              android:id="@+id/item_income_tv_amount"
              style="@style/income_item_value_green"
            />
              
          </LinearLayout>
        </LinearLayout>
    
     </LinearLayout>
    
      
  
</LinearLayout>
