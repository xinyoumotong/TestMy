<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_border_all2"
        android:orientation="vertical">

        <!-- 项目名称 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/product_history_item_title"
                android:text="@string/project_name" />

            <TextView
                android:id="@+id/item_invest_history3_BidName"
                style="@style/product_history_item_value" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_border_lr2"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!-- 投资金额 -->
            <LinearLayout
                style="@style/ll_horizontal_weight"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical">

                <TextView
                    style="@style/product_history_item_title"
                    android:text="@string/project_invest_money" />

                <TextView
                    android:id="@+id/item_invest_history3_TransAmt"
                    android:textColor="@color/rede63054"
                    style="@style/product_history_item_value" />

            </LinearLayout>

            <!-- 投资时间 -->
            <LinearLayout
                style="@style/ll_horizontal_weight"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical">

                <TextView
                    style="@style/product_history_item_title2"
                    android:text="@string/project_invest_time" />

                <TextView
                    android:id="@+id/item_invest_history3_CreateTime"
                    style="@style/product_history_item_value"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_border_lrb2"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!-- 流标状态 -->
            <LinearLayout
                style="@style/ll_horizontal_weight"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical">

                <TextView
                    style="@style/product_history_item_title"
                    android:text="@string/project_invest_state" />

                <TextView
                    android:id="@+id/item_invest_history3_tv_flow"
                    style="@style/product_history_item_value"
                    android:text="@string/unknown" />

            </LinearLayout>

            <!-- 投资时间 -->
            <LinearLayout
                android:id="@+id/item_invest_history3_ll"
                style="@style/ll_horizontal_weight"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_border_all_red"
                    >

                    <TextView
                        android:id="@+id/item_invest_history3_btn_flow"
                        style="@style/product_history_item_title2"
                        android:layout_margin="6dp"
                        android:text="@string/unknown2"
                        android:textColor="@color/rede63054"
                        android:textSize="12sp"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
