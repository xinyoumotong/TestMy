<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:fitsSystemWindows="true"
  >

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/titlebar_height" 
     />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true" />

    <hotP2B.WageGainTools.android.ui.widget.EmptyLayout
        android:id="@+id/browser_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
     />

    <include
        android:id="@+id/browser_titlebar"
        layout="@layout/main_titlebar" />

    <RelativeLayout
        android:id="@+id/browser_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#f3f3f3"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" 
        android:gravity="center"
     >

        <TextView
            android:id="@+id/browser_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/icon_safeguard"
            android:drawablePadding="5dp"
            android:text="你正在使用安全的第三方托管平台进行交易"
         />

      
    
    </RelativeLayout>

</RelativeLayout>