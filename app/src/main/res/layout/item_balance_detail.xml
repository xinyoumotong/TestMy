<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
      <TextView 
        android:id="@+id/balance_detail_tv_useinfo"
        style="@style/list_rl_tv_left"
        android:textStyle="bold"
        android:padding="5dp"
     />  
     
     <TextView 
        android:id="@+id/balance_detail_tv_cashAmt"
        style="@style/list_rl_tv_right"
        android:padding="5dp"
        android:textColor="#0000dd"
     />      
        
    </RelativeLayout>
    
    <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
    >
      <TextView 
         android:id="@+id/balance_detail_tv_currentbalance"
         style="@style/list_rl_tv_left"
          android:padding="5dp"
       />  
     
     <TextView 
        android:id="@+id/balance_detail_tv_cashDate"
        style="@style/list_rl_tv_right"
        android:padding="5dp"
        
      />      
        
    </RelativeLayout>
    

</LinearLayout>
