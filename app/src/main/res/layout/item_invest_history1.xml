<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_border_all2"
        android:orientation="vertical">

        <!-- 项目名称 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/product_history_item_title"
                android:text="@string/project_name" />

            <TextView
                android:id="@+id/item_invest_history1_BidName"
                style="@style/product_history_item_value" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_border_lr2"
            android:orientation="horizontal">

            <!--回报率 -->
            <LinearLayout
                style="@style/ll_horizontal_weight"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical">

                <TextView
                    style="@style/product_history_item_title"
                    android:text="回报率：" />

                <TextView
                    android:id="@+id/item_invest_history1_lixi2"
                    android:textColor="@color/rede63054"
                    style="@style/product_history_item_value" />

            </LinearLayout>

            <!-- 投资金额 -->
            <LinearLayout
                style="@style/ll_horizontal_weight2"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical">

                <TextView
                    style="@style/product_history_item_title"
                    android:text="@string/project_invest_money" />

                <TextView
                    android:id="@+id/item_invest_history1_TransAmt"
                    android:textColor="@color/rede63054"
                    style="@style/product_history_item_value" />

            </LinearLayout>


        </LinearLayout>

        <!-- 投资时间 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/shape_border_lr2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/product_history_item_title"
                android:text="@string/project_invest_time" />

            <TextView
                android:id="@+id/item_invest_history1_CreateTime"
                style="@style/product_history_item_value" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
