<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:background="@drawable/dialog_background" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_marginLeft="20.0dip" 
    android:layout_marginRight="20dp"
 >
    <TextView 
        android:id="@+id/dialog_tv_prompt" 
        android:paddingLeft="10.0dip" 
        android:paddingRight="10.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="10.0dip" 
        android:textSize="16.0sp" 
        android:textColor="@android:color/black" 
        android:gravity="center" 
        android:text="@string/prompt"
     />
    <TextView 
        android:id="@+id/dialog_tv_msg" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip" 
        android:paddingLeft="30dp"  
        android:paddingRight="30dp"
        android:textSize="14.0sp" 
        android:gravity="center" 
      />
    <View 
        android:layout_marginTop="10.0dip" 
        style="@style/divider_horizontal" 
    />
    <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
    >
        <TextView 
            android:id="@+id/dialog_tv_cancel" 
            android:background="@drawable/dialog_selector_left" 
            android:padding="10.0dip" 
            android:clickable="true" 
            android:layout_width="0.0dip" 
            android:layout_height="wrap_content" 
            android:layout_weight="1.0" 
            android:textSize="15.0sp" 
            android:gravity="center" 
            android:textColor="#ff808080" 
            android:text="@string/cancel" 
        />
        
       <View 
           style="@style/divider_vertical" 
       />
        <TextView 
            android:id="@+id/dialog_tv_confirm" 
            android:background="@drawable/dialog_selector_right" 
            android:padding="10.0dip" 
            android:clickable="true" 
            android:layout_width="0.0dip" 
            android:layout_height="wrap_content" 
            android:layout_weight="1.0" 
            android:textSize="15.0sp" 
            android:gravity="center" 
            android:textColor="#ff0000dd" 
            android:text="@string/confirm" 
       />
        
   </LinearLayout>
</LinearLayout>