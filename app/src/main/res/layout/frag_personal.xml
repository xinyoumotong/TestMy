<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- 真实姓名 -->
            <RelativeLayout
                android:id="@+id/personal_rl_realname"
                android:layout_marginTop="10dp"
                style="@style/about_me_rl">

                <TextView
                    style="@style/list_rl_tv_left2"
                    android:text="@string/realname" />

                <TextView
                    android:id="@+id/personal_tv_realname"
                    style="@style/list_rl_tv_right"
                    android:textColor="@color/gray_99" />
            </RelativeLayout>

            <View style="@style/divider_horizontal2" />

            <!-- 手机号码 -->
            <RelativeLayout
                android:id="@+id/personal_rl_phoneNumber"
                style="@style/about_me_rl">

                <TextView
                    style="@style/list_rl_tv_left2"
                    android:text="@string/mobile" />

                <TextView
                    android:id="@+id/personal_tv_phoneNumber"
                    android:textColor="@color/gray_99"
                    style="@style/list_rl_tv_right" />
            </RelativeLayout>

            <View style="@style/divider_horizontal2" />

            <!-- 身份证号-->
            <RelativeLayout
                android:id="@+id/personal_rl_idNumber"
                style="@style/about_me_rl">

                <TextView
                    style="@style/list_rl_tv_left2"
                    android:text="@string/idNumber" />

                <TextView
                    android:id="@+id/personal_tv_idNumber_show"
                    android:textColor="@color/gray_99"
                    style="@style/list_rl_tv_right" />

                <TextView
                    android:id="@+id/personal_tv_idNumber_hide"
                    style="@style/list_rl_tv_right"
                    android:textColor="@color/gray_99"
                    android:visibility="gone" />

            </RelativeLayout>

            <View style="@style/divider_horizontal2" />

        </LinearLayout>

    </LinearLayout>


    <hotP2B.WageGainTools.android.ui.widget.EmptyLayout
        android:id="@+id/personal_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</RelativeLayout>