<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/item_bankcard_rl"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="75dp"
		android:background="@drawable/shape_border_tb2"
		android:layout_marginTop="20dp"
		>

	<LinearLayout
		android:id="@+id/item_bankcard_rlt"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_centerInParent="true"
		android:gravity="center"
		>

		<ImageView
			android:id="@+id/item_bankcard_iv_bank_logo"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:contentDescription="@null"
			android:scaleType="fitCenter" />

		<TextView
			android:id="@+id/item_bankcard_tv_bank_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:textColor="#4d4d4d"
			android:textSize="18dp" />

		<TextView
			android:id="@+id/item_bankcard_tv_bank_cardNumber"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:textColor="#4d4d4d"
			android:textSize="18dp" />


	</LinearLayout>
		<ImageView
			android:id="@+id/item_bankcard_iv_identify_logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			/>
	</RelativeLayout>


	</RelativeLayout>
