<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
 		<layer-list >    
		    <item>    
		        <shape>    
		            <solid android:color="#e63054" />    
		            <corners android:topLeftRadius="0.1dp" android:topRightRadius="2dp"    
