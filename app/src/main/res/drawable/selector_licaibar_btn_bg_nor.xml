<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
		<layer-list>    
			    <item>    
			        <shape>    
			            <solid android:color="#e63054" />    
			            <stroke    
			                android:width="1dp"    
			                android:color="#e63054" />    
			        </shape>    
			    </item>    
			    <item    
			        android:left="1dp"    
			        android:right="1dp"    
			        android:top="1dp"
			        android:bottom="1dp">    
			        <shape>    
			            <solid android:color="#e63054" />    
			            <stroke    
			                android:width="1dp"    
			                android:color="#e63054" />    
			        </shape>    
			    </item>    
			</layer-list>
	</item>
	
	
    <item >
		<layer-list>    
		    <item>    
		        <shape>    
		            <solid android:color="#FFFFFF" />    
		            <stroke    
		                android:width="1dp"    
		                android:color="#ffa8abad" />    
		        </shape>    
		    </item>    
		    <item    
		        android:left="1dp"    
		        android:right="1dp"    
		        android:top="1dp"
		        android:bottom="1dp">    
		        <shape>    
		            <solid android:color="#FFFFFF" />    
		            <stroke    
		                android:width="1dp"    
		                android:color="#ffffffff" />    
		        </shape>    
		    </item>    
		</layer-list>  
    </item>
</selector>